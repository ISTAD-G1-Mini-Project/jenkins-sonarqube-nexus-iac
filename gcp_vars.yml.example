---
# ============================================
# GCP Configuration - Example
# Copy this to gcp_vars.yml and edit
# ============================================

# ============================================
# GCP PROJECT SETTINGS
# ============================================
# Your GCP Project ID (found in GCP Console)
gcp_project_id: "my-project-12345"

# Path to your service account JSON key file
# Download from: GCP Console → IAM & Admin → Service Accounts
gcp_service_account_file: "/home/user/gcp-service-account-key.json"

# GCP Region and Zone
# List available: gcloud compute regions list
gcp_region: "us-central1"
gcp_zone: "us-central1-a"

# ============================================
# NETWORK SETTINGS
# ============================================
network_name: "ansible-infra-network"
subnet_name: "ansible-infra-subnet"
subnet_cidr: "10.0.0.0/24"

# ============================================
# VM INSTANCE SETTINGS
# ============================================
# Machine type determines CPU and RAM
# Options:
#   e2-micro:      0.5-2 vCPU, 1GB RAM   (~$7/month)   - Too small
#   e2-small:      0.5-2 vCPU, 2GB RAM   (~$13/month)  - Too small
#   e2-medium:     1 vCPU, 4GB RAM       (~$24/month)  - Minimum
#   e2-standard-2: 2 vCPU, 8GB RAM       (~$49/month)  - Recommended
#   e2-standard-4: 4 vCPU, 16GB RAM      (~$98/month)  - High performance
machine_type: "e2-standard-2"

# Boot disk settings
boot_disk_size: 50  # GB - minimum 20GB recommended
boot_disk_type: "pd-standard"  # Options: "pd-standard" (cheaper) or "pd-ssd" (faster)

# Operating System
image_family: "ubuntu-2204-lts"  # Ubuntu 22.04 LTS
image_project: "ubuntu-os-cloud"

# ============================================
# VM INSTANCE NAMES
# ============================================
machine01_name: "jenkins-server"
machine02_name: "sonarqube-server"
machine03_name: "nexus-server"

# ============================================
# DOMAIN CONFIGURATION
# ============================================
# Replace with your actual domain names
jenkins_domain: "jenkins.example.com"
sonarqube_domain: "sonarqube.example.com"
nexus_domain: "nexus.example.com"

# Email for Let's Encrypt SSL certificates
admin_email: "admin@example.com"

# ============================================
# SSH CONFIGURATION
# ============================================
# SSH user that will be created on VMs
ssh_user: "ansible"

# Path to your SSH public key
# Generate if needed: ssh-keygen -t rsa -b 4096 -f ~/.ssh/id_rsa
ssh_public_key_file: "~/.ssh/id_rsa.pub"

# ============================================
# RESOURCE TAGS
# ============================================
# Labels for organizing GCP resources
resource_tags:
  environment: "production"
  managed_by: "ansible"
  project: "cicd-infrastructure"
  owner: "devops-team"

# ============================================
# ESTIMATED MONTHLY COSTS (us-central1)
# ============================================
# 3x e2-standard-2: ~$147
# 3x 50GB disks:    ~$6
# 3x External IPs:  ~$10
# Total:            ~$163/month
#
# To reduce costs:
# - Use e2-medium: ~$72 + $6 + $10 = ~$88/month
# - Use preemptible VMs: up to 80% cheaper
# - Stop VMs when not in use
# ============================================
